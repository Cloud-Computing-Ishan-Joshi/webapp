        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "faker": "^5.5.3",
        "jest": "^29.7.0",
        "nodemon": "^3.0.3",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.36.0",
        "supertest": "^6.3.4",
        "winston": "^3.12.0"
